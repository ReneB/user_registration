<% honeypot_field_name = Rails.application.config.honeypot_field_name %>

<div class="container">

  <div class="row">
    <form id="new_invitation" data-formfor-invitation="controllers.invitations.invitation" data-event-submit="controllers.invitations.create">

      <div class="col-xs-12 col-sm-4 col-md-3">
        <input type="text" class="form-control" data-bind="invitation.inviter_name" data-bind-placeholder="'invitation.inviter_name' | t" name="inviter_name"/>
      </div>

      <div class="col-xs-12 col-sm-4 col-md-3">
        <input type="text" class="form-control" data-bind="invitation.recipient_name" data-bind-placeholder="'invitation.recipient_name' | t" name="recipient_name"/>
      </div>

      <div class="col-xs-12 col-sm-4 col-md-3">
        <input type="email" class="form-control" data-bind="invitation.recipient_email" data-bind-placeholder="'invitation.recipient_email' | t" name="recipient_email"/>
      </div>

      <input type="text" data-bind="invitation.<%= honeypot_field_name %>" placeholder="<%= honeypot_field_name %>" name="<%= honeypot_field_name %>"/>

      <div class="col-xs-12 col-sm-6 col-sm-offset-3 col-md-3 col-md-offset-0">
        <input class="form-control submit" type="submit" data-event-click="controllers.invitations.create" data-bind-value="'invitation.invite' | t" />
      </div>

      <span class="error" data-foreach-error="invitation.errors">
        <div class="col-xs-12 error">
          <span data-bind="error.attribute | prepend 'invitation.' | translate"></span>
          <span data-bind="error.message"></span>
        </div>
      </span>

    </form>
  </div>

  <div class="row">
    <div class="col-xs=12">
      <span id="feedback" class="horizontal-center leader" data-bind="invitationFeedback"></span>
    </div>
  </div>

</div>

