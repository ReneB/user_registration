<% honeypot_field_name = Rails.application.config.honeypot_field_name %>

<div class="row" style="height: 100%">
  <form id="new_invitation" data-formfor-invitation="invitation" data-event-submit="createInvite">

    <span class="error" data-foreach-error="invitation.errors">
      <div class="error col-xs-12">
        <span data-bind="error.attribute | prepend 'invitation.' | translate"></span>
        <span data-bind="error.message"></span>
      </div>
    </span>


    <div class="form-group">
      <input type="text" class="form-control col-xs-12" data-bind="invitation.inviter_name" data-bind-placeholder="'invitation.inviter_name' | t" name="inviter_name"/>
    </div>

    <div class="form-group">
      <input type="text" class="form-control col-xs-12" data-bind="invitation.recipient_name" data-bind-placeholder="'invitation.recipient_name' | t" name="recipient_name"/>
    </div>

    <div class="form-group">
      <input type="email" class="form-control col-xs-12" data-bind="invitation.recipient_email" data-bind-placeholder="'invitation.recipient_email' | t" name="recipient_email"/>
    </div>


    <div class="form-group">
      <input type="text" data-bind="invitation.<%= honeypot_field_name %>" placeholder="<%= honeypot_field_name %>" name="<%= honeypot_field_name %>"/>
    </div>

    <div class="form-group">
      <input class="btn submitbutton col-sm-6 col-xs-12 horizontal-center" type="submit" data-event-click="createInvitation" data-bind-value="'invitation.invite' | t" />
    </div>

  </form>
</div>

