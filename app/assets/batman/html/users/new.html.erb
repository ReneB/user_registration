        <input data-bind="user.email" placeholder="uw e-mail adres" name="mail"/>
      </div>

      <div>
        <input data-bind="user.<%= honeypot_field_name %>" placeholder="<%= honeypot_field_name %>" name="<%= honeypot_field_name %>"/>
      </div>

