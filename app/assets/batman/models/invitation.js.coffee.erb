class UserRegistration.Invitation extends Batman.Model
  @resourceName: 'invitations'
  @storageKey: 'invitations'

  @persist Batman.RailsStorage

  @validate 'inviter_name', presence: true
  @validate 'recipient_name', presence: true
  @validate 'recipient_email', pattern: /\w.*@.*\w/

  # Use @encode to tell batman.js which properties Rails will send back with its JSON.
  @encode 'inviter_name', 'recipient_name', 'recipient_email', '<%= Rails.application.config.honeypot_field_name %>'

  @encodeTimestamps()

